# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nxtai_db

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Server Configuration
NODE_ENV=development
PORT=5000

# ASAAS Payment Gateway
ASAAS_API_KEY=your-asaas-api-key
ASAAS_ENVIRONMENT=sandbox

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#general

# Google APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI (for Chatbot AI)
OPENAI_API_KEY=sk-your-openai-api-key

# RD Station
RD_STATION_CLIENT_ID=your-rd-station-client-id
RD_STATION_CLIENT_SECRET=your-rd-station-client-secret

# Zapier Webhooks
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-id

# Custom Webhooks
WEBHOOK_SECRET=your-webhook-secret-key

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_WEBHOOKS=true

# Default Admin Users (for seeding)
DEFAULT_ADMIN_EMAIL_1=samuel@dnxtai.com
DEFAULT_ADMIN_EMAIL_2=leo@dnxtai.com
DEFAULT_ADMIN_PASSWORD=admin123

# Company Defaults
DEFAULT_COMPANY_NAME=NXT.ai Demo
DEFAULT_COMPANY_SLUG=nxt-ai-demo
